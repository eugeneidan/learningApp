
<!-- Services Section -->
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Listing Todos</h2>
                <%= link_to 'New Todo', new_todo_path, class: "page-scroll btn btn-default" %>
                <h3 class="section-subheading text-muted"><p id="notice"><%= notice %></p></h3>
            </div>
        </div>
        <div class="row text-center">

            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-shopping-cart fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">Completed</h4>
                <% @completed_todos.each do |todo| %>
                <span class="text-muted">
                      <%= todo.title %><br/>
                      <%= link_to "Delete article", todo_delete_url(todo), remote: true, method: :delete %><br/>
                </span>
                <% end %>
            </div>

            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-laptop fa-stack-1x fa-inverse"></i>
                </span>
                  <h4 class="service-heading">Started</h4>
                  <% @started_todos.each do |todo| %>
                  <span class="text-muted">
                      <%= todo.title %><br/>
                      <%= link_to "Delete article", todo_delete_url(todo), remote: true, method: :delete %><br/>
                  </span>
                  <% end %>
            </div>

            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-lock fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">Ongoing</h4>
                <% @ongoing_todos.each do |todo| %>
                <span class="text-muted">
                    <%= todo.title %><br/>
                    <%= link_to "Delete article", todo_delete_url(todo), remote: true, method: :delete %><br/>
                </span>
                <% end %>
            </div>
        </div>
    </div>
</section>
